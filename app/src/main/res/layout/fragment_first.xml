<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstFragment"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/compassbg"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <ImageView
        android:id="@+id/title"
        android:layout_width="348dp"
        android:layout_height="155dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="40dp"
        android:src="@drawable/scaventure"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/invalidlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>

        <ImageView
            android:id="@+id/signinimage"
            android:layout_width="209dp"
            android:layout_height="104dp"
            android:layout_gravity="center"
            android:src="@drawable/singinbutton"/>

        <Button
            android:id="@+id/asguestbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="#0000"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="@string/continueasguest" />

    </LinearLayout>


</FrameLayout>