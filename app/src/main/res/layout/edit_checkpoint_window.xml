<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".edithuntfiles.EditCheckpointWindow"
    tools:ignore="HardcodedText">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:src="@drawable/compassbg"
            android:scaleType="centerCrop" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="Checkpoint"
            android:textSize="30dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/editdescriptionbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:gravity="start|top"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Hint 1"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edithint1box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Hint 2"
            android:textSize="18dp"
            android:textColor="@color/black"/>
        <EditText
            android:id="@+id/edithint2box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Hint 3"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edithint3box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="15"
            android:gravity="start|top"
            android:inputType="textMultiLine" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/redflagimage"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:clickable="true"
                android:layout_margin="5dp"
                android:src="@drawable/redflag"
                android:focusable="true" />
            <ImageView
                android:id="@+id/blueflagimage"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:clickable="true"
                android:layout_margin="5dp"
                android:src="@drawable/blueflag"
                android:focusable="true" />
            <ImageView
                android:id="@+id/blackflagimage"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:clickable="true"
                android:layout_margin="5dp"
                android:src="@drawable/flag"
                android:focusable="true" />
            <ImageView
                android:id="@+id/yellowflagimage"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:clickable="true"
                android:layout_margin="5dp"
                android:src="@drawable/yellowflag"
                android:focusable="true" />
        </GridLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/canceleditcp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="cancel" />

            <Button
                android:id="@+id/doneeditcp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="done"
                android:layout_margin="10dp"/>
        </LinearLayout>


    </LinearLayout>

</FrameLayout>